@model IEnumerable<bacit_dotnet.MVC.Models.CheckList.CheckListViewModel>

@{
    ViewData["Title"] = "Completed Checklists";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/Checklist.css">
</head>
<body>

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Checkpoint ID</th>
                <th>Clutch Check</th>
                <th>Brake Check</th>
                <th>Drum Bearing Check</th>
                <th>PTO Check</th>
                <th>Chain Tension Check</th>
                <th>Wire Check</th>
                <th>Pinion Bearing Check</th>
                <th>Chain Wheel Key Check</th>
                <th>Hydraulic Cylinder Check</th>
                <th>Hose Check</th>
                <th>Hydraulic Block Test</th>
                <th>Tank Oil Change</th>
                <th>Gearbox Oil Change</th>
                <th>Ring Cylinder Seals Check</th>
                <th>Brake Cylinder Seals Check</th>
                <th>Winch Wiring Check</th>
                <th>Radio Check</th>
                <th>Button Box Check</th>
                <th>Pressure Settings</th>
                <th>Function Test</th>
                <th>Traction Force KN</th>
                <th>Brake Force KN</th>
                <th>Completion Date</th>
                <th>Comments</th>
                <th>Signature</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var checklist in Model)
            {
                <tr>
                    <td>@checklist.CheckpointId</td>
                    <td>@checklist.ClutchCheck</td>
                    <td>@checklist.BrakeCheck</td>
                    <td>@checklist.DrumBearingCheck</td>
                    <td>@checklist.PTOCheck</td>
                    <td>@checklist.ChainTensionCheck</td>
                    <td>@checklist.WireCheck</td>
                    <td>@checklist.PinionBearingCheck</td>
                    <td>@checklist.ChainWheelKeyCheck</td>
                    <td>@checklist.HydraulicCylinderCheck</td>
                    <td>@checklist.HoseCheck</td>
                    <td>@checklist.HydraulicBlockTest</td>
                    <td>@checklist.TankOilChange</td>
                    <td>@checklist.GearboxOilChange</td>
                    <td>@checklist.RingCylinderSealsCheck</td>
                    <td>@checklist.BrakeCylinderSealsCheck</td>
                    <td>@checklist.WinchWiringCheck</td>
                    <td>@checklist.RadioCheck</td>
                    <td>@checklist.ButtonBoxCheck</td>
                    <td>@checklist.PressureSettings</td>
                    <td>@checklist.FunctionTest</td>
                    <td>@checklist.TractionForceKN</td>
                    <td>@checklist.BrakeForceKN</td>
                    <td>@checklist.CompletionDate.ToString("dd/MM/yyyy")</td>
                    <td>@checklist.Freeform</td>
                    <td>@checklist.Sign</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No checklist entries found.</p>
}

</body>
</html>
