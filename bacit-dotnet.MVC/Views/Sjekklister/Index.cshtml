@model IEnumerable<bacit_dotnet.MVC.Models.CheckList.CheckListViewModel>

@{
    ViewData["Title"] = "Sjekklister";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sjekklister</title>
    <link rel="stylesheet" href="/css/checkList.css">

</head>

<body>
<h2>Sjekkslister</h2>
    <form>
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Checklist Id</th>
                <th>Sign</th>
                <th>Freeform</th>
                <th>CompletionDate:</th>
             
            </tr>
            </thead>
            <tbody>
            
            @foreach (var Checklist in Model)
            {
                <tr>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutCheckList" asp-action="Index" asp-route-id="@Checklist.CheckpointId">
                            @Checklist.CheckpointId
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutCheckList" asp-action="Index" asp-route-id="@Checklist.Sign">
                            @Checklist.Sign
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutCheckList" asp-action="Index" asp-route-id="@Checklist.Freeform">
                            @Checklist.Freeform
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutCheckList" asp-action="Index" asp-route-id="@Checklist.CompletionDate">
                            @Html.DisplayFor(model => Checklist.CompletionDate)
                        </a>
                    </td>
                </tr>
            }
            
            </tbody>
        </table>
    </form>
</body>