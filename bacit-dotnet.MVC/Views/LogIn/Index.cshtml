@model bacit_dotnet.MVC.Models.Account.LoginViewModel;

@{
    ViewData["Title"] = "Logg inn";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logg Inn</title>
    <link rel="stylesheet" href="/css/login.css">
    <style>
        .form-group {
            margin-bottom: 20px;
        }

        .button-group {
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div>
    <h2>Logg inn</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Skriv inn Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Passord:</label>
            <input asp-for="Password" type="password" class="form-control" style="margin-bottom: 10px;" placeholder="Skriv inn passord" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Logg inn</button>
    </form>

    <div class="button-group">
        <a asp-controller="Register" asp-action="Index"><button type="button" class="btn btn-primary">Registrer en bruker</button></a>
    </div>
    
    <div class="button-group">
        <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary">GÃ¥ til hovedside</button></a>
    </div>
</div>
</body>
</html>