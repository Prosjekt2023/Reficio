@model IEnumerable<bacit_dotnet.MVC.Models.ServiceForm.ServiceFormViewModel>

@{
    ViewData["Title"] = "ServiceOrder";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ServiceOrdre</title>
    <link rel="stylesheet" href="/css/ServiceOrder.css">

</head>

<body>
<h2>Serviceordre</h2>
    <form>
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Serviceskjema Id</th>
                <th>Kunde:</th>
                <th>Mottatt dato:</th>
                <!--<th>Adresse:</th>-->
                <!--<th>E-Mail:</th>-->
                <th>Ordrenummer:</th>
                <!--<th>Telefon:</th>-->
                <!--<th>Produkttype:</th>-->
                <!--<th>Ã…rsmodell:</th>-->
                <!--<th>Service/rep:</th>-->
                <!--<th>Garanti:</th>-->
            </tr>
            </thead>
            <tbody>
            
            @foreach (var serviceFormEntry in Model)
            {
                <tr>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutServiceForm" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.ServiceFormId
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutServiceForm" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.Customer
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutServiceForm" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @Html.DisplayFor(model => serviceFormEntry.DateReceived)
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="FilledOutServiceForm" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.OrderNumber
                        </a>
                    </td>
                </tr>
            }
            
            </tbody>
        </table>
    </form>
</body>